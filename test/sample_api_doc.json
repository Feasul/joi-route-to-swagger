  "paths": {
    "/hero/": {
      "get": {
        "tags": [
          "hero"
        ],
        "summary": "List",
        "description": "",
        "parameters": [
          {
            "description": "Hero ID (Example: 621)",
            "name": "heroId",
            "example": "621",
            "schema": {
              "type": "string"
            },
            "in": "query"
          },
          {
            "description": "",
            "name": "sort",
            "schema": {
              "enum": [
                "createdAt",
                "updatedAt"
              ],
              "default": "createdAt",
              "type": "string"
            },
            "in": "query"
          },
          {
            "description": "",
            "name": "direction",
            "schema": {
              "enum": [
                "desc",
                "asc"
              ],
              "default": "desc",
              "type": "string"
            },
            "in": "query"
          },
          {
            "description": "",
            "name": "limit",
            "schema": {
              "multipleOf": 10,
              "maximum": 100,
              "minimum": 1,
              "default": 100,
              "type": "integer"
            },
            "in": "query"
          },
          {
            "description": "",
            "name": "page",
            "schema": {
              "maximum": 10,
              "exclusiveMaximum": true,
              "minimum": 0,
              "exclusiveMinimum": true,
              "type": "integer"
            },
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Normal Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "description": "Status Code",
                      "type": "string",
                      "example": "10000000"
                    },
                    "data": {
                      "required": [
                        "totalCount",
                        "page"
                      ],
                      "description": "",
                      "type": "object",
                      "properties": {
                        "records": {
                          "description": "",
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "_id": {
                                "description": "Unique id of hero",
                                "type": "string",
                                "example": "59ba1f3c2e9787247e29da9b"
                              },
                              "updatedAt": {
                                "description": "Data creation time",
                                "type": "string",
                                "example": "2017-09-14T06:18:36.786Z"
                              },
                              "createdAt": {
                                "description": "Data last update time",
                                "type": "string",
                                "example": "2017-09-14T06:18:36.786Z"
                              },
                              "nickName": {
                                "description": "Nick name",
                                "type": "string",
                                "example": "Ken"
                              },
                              "gender": {
                                "description": "Gender",
                                "type": "string",
                                "example": "Male"
                              },
                              "avatar": {
                                "description": "Hero avatar",
                                "type": "string"
                              }
                            },
                            "required": [
                              "_id",
                              "updatedAt",
                              "createdAt",
                              "nickName",
                              "gender"
                            ],
                            "description": ""
                          }
                        },
                        "totalCount": {
                          "description": "Total number of records",
                          "type": "integer",
                          "example": 2
                        },
                        "page": {
                          "description": "Page Number",
                          "type": "integer",
                          "example": 1
                        }
                      }
                    }
                  },
                  "required": [
                    "code"
                  ],
                  "description": ""
                }
              }
            }
          },
          "500": {
            "description": "When Server takes a nap.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "hero"

            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nickName": {
                    "maxLength": 20,
                    "minLength": 3,
                    "pattern": "^[a-z]+$",
                    "description": "Hero Nickname",
                    "type": "string",
                    "example": "鹄思乱想"
                  },
                  "avatar": {
                    "description": "",
                    "format": "uri",
                    "type": "string"
                  },
                  "icon": {
                    "description": "",
                    "type": "string"
                  },
                  "email": {
                    "description": "",
                    "format": "email",
                    "type": "string"
                  },
                  "ip": {
                    "description": "",
                    "type": "string",
                    "oneOf": [
                      {
                        "format": "ipv4"
                      },
                      {
                        "format": "ipv6"
                      }
                    ]
                  },
                  "hostname": {
                    "description": "",
                    "format": "hostname",
                    "type": "string"
                  },
                  "gender": {
                    "enum": [
                      "Male",
                      "Female"
                    ],
                    "description": "",
                    "type": "string"
                  },
                  "height": {
                    "description": "",
                    "type": "number"
                  },
                  "birthday": {
                    "description": "",
                    "format": "date-time",
                    "type": "string"
                  },
                  "birthTime": {
                    "description": "",
                    "type": "integer"
                  },
                  "skills": {
                    "maxItems": 3,
                    "minItems": 1,
                    "uniqueItems": true,
                    "description": "Skills",
                    "type": "array",
                    "items": {
                      "oneOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "name": {
                              "description": "Skill Name",
                              "type": "string",
                              "example": "teleport"
                            },
                            "level": {
                              "description": "Skill Level",
                              "type": "integer",
                              "example": 1
                            }
                          },
                          "description": ""
                        }
                      ]
                    }
                  },
                  "retired": {
                    "description": "",
                    "type": "boolean"
                  }
                },
                "required": [
                  "nickName",
                  "avatar"
                ],
                "additionalProperties": true,
                "description": "Hero profile"
              }
            }
          }
        }
      }
